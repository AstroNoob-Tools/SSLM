{
  "name": "sslm-seastar-library-manager",
  "version": "1.0.0-beta.1",
  "description": "SSLM - SeeStar Library Manager: Astrophotography library management application with local web interface",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --output dist/sslm.exe --icon public/assets/sslm.ico",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "astrophotography",
    "seestar",
    "seastar",
    "library-manager",
    "sslm",
    "astronomy"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "check-disk-space": "^3.4.0",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.14.0",
    "nodemon": "^3.0.3"
  },
  "pkg": {
    "targets": [
      "node20-win-x64"
    ],
    "assets": [
      "public/**/*",
      "config/**/*",
      "installer/sslm.iss",
      "node_modules/socket.io/client-dist/**"
    ]
  }
}
